<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:fillViewport="true"
    tools:context=".CommunityConsensus">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/LayoutAbove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/top_rectangle"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Backbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#03045E"
                app:srcCompat="@drawable/ic_baseline_arrow_back_34white" />

            <TextView
                android:id="@+id/CommunityConcensus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-black"
                android:text="Community Concensus"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="128dp"
            android:layout_height="116dp"
            android:layout_marginTop="2dp"
            android:elevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/LayoutAbove"
            app:layout_constraintBottom_toTopOf="@+id/BodyLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/cc" />

        <LinearLayout
            android:id="@+id/BodyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_background"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="-70dp"
            tools:layout_editor_absoluteX="388dp"
            tools:layout_editor_absoluteY="150dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="75dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Cast Your Vote"
                    android:textColor="#03045E"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnPoll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:text="My Poll" />

                    <Button
                        android:id="@+id/btnAsk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:text="Ask Question" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/PollLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_place">

                    <LinearLayout
                        android:id="@+id/PollPlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="345dp"
                            android:layout_height="2dp"
                            android:layout_marginTop="1dp"
                            app:srcCompat="@drawable/top_rectangle" />

                        <TextView
                            android:id="@+id/vPollTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:fontFamily="sans-serif-black"
                            android:layout_gravity="center_horizontal"
                            android:text="Title Question"
                            android:textColor="#03045E"
                            android:textSize="12sp"/>

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="345dp"
                            android:layout_height="2dp"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/top_rectangle" />

                        <RelativeLayout
                            android:id="@+id/FirstPoll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/square_poll">

                            <RadioGroup
                                android:id="@+id/pollOptions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="65dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/square_poll"
                                    android:orientation="horizontal"
                                    android:padding="1dp">

                                    <RadioButton
                                        android:id="@+id/radioButton1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:id="@+id/viewanswer1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="-90dp"
                                        android:layout_marginRight="-200dp"
                                        android:layout_weight="1"
                                        android:ems="12"
                                        android:inputType="textPersonName"
                                        android:text="View answer"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:id="@+id/Percentage1"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginStart="200dp"
                                        android:layout_marginTop="-3dp"
                                        android:layout_marginEnd="5dp"
                                        android:text="0%"
                                        android:textColor="#03045E"
                                        android:textSize="15sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/square_poll"
                                    android:orientation="horizontal"
                                    android:padding="1dp">

                                    <RadioButton
                                        android:id="@+id/radioButton2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:id="@+id/viewanswer2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="-90dp"
                                        android:layout_marginRight="-200dp"
                                        android:layout_weight="1"
                                        android:ems="12"
                                        android:inputType="textPersonName"
                                        android:text="View answer"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:id="@+id/Percentage2"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginStart="200dp"
                                        android:layout_marginTop="-3dp"
                                        android:layout_marginEnd="5dp"
                                        android:text="0%"
                                        android:textColor="#03045E"
                                        android:textSize="15sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/vAnswer3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/square_poll"
                                    android:orientation="horizontal"
                                    android:padding="1dp"
                                    android:visibility="gone"
                                    tools:visibility="visible">

                                    <RadioButton
                                        android:id="@+id/radioButton3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:id="@+id/viewanswer3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="-90dp"
                                        android:layout_marginRight="-200dp"
                                        android:layout_weight="1"
                                        android:ems="12"
                                        android:inputType="textPersonName"
                                        android:text="View answer"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:id="@+id/Percentage3"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginStart="200dp"
                                        android:layout_marginTop="-3dp"
                                        android:layout_marginEnd="5dp"
                                        android:text="0%"
                                        android:textColor="#03045E"
                                        android:textSize="15sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/vAnswer4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/square_poll"
                                    android:orientation="horizontal"
                                    android:padding="1dp"
                                    android:visibility="gone"
                                    tools:visibility="visible">

                                    <RadioButton
                                        android:id="@+id/radioButton4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:id="@+id/viewanswer4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="-90dp"
                                        android:layout_marginRight="-200dp"
                                        android:layout_weight="1"
                                        android:ems="12"
                                        android:inputType="textPersonName"
                                        android:text="View answer"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:id="@+id/Percentage4"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginStart="200dp"
                                        android:layout_marginTop="-3dp"
                                        android:layout_marginEnd="5dp"
                                        android:text="0%"
                                        android:textColor="#03045E"
                                        android:textSize="15sp" />

                                </LinearLayout>

                            </RadioGroup>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/vPollName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="8dp"
                                    android:text="Anonymous"
                                    android:textColor="#03045E"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/TimePosted"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Time Posted" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/vPollQuestion"
                                android:layout_width="353dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="10dp"
                                android:text=" Writing effectively is an art. Start by using simple, everyday words people can easily understand. Be clear and direct to the point? "
                                android:textColor="#03045E"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/TotalVotes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Total Votes" />

                            <TextView
                                android:id="@+id/TimeRemaining"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Time Remaining" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/BtnVote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:text="Vote" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/PollLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/text_place">

                    <LinearLayout
                        android:id="@+id/LowerPollPlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/lowerline1"
                            android:layout_width="345dp"
                            android:layout_height="2dp"
                            android:layout_marginTop="1dp"
                            app:srcCompat="@drawable/top_rectangle" />

                        <TextView
                            android:id="@+id/LowerPollName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:fontFamily="sans-serif-black"
                            android:text="Comments"
                            android:textColor="#03045E"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/lowerline2"
                            android:layout_width="345dp"
                            android:layout_height="2dp"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/top_rectangle" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/square_poll"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/LowerDescription1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="5dp"
                                android:text="Writing effectively is an art. Start by using simple, everyday words people can easily understand. "
                                android:textColor="#03045E"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/LowerDescription2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="5dp"
                                android:text="Writing effectively is an art. Start by using simple, everyday words people can easily understand. "
                                android:textColor="#03045E"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/LowerDescription3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="5dp"
                                android:text="Writing effectively is an art. Start by using simple, everyday words people can easily understand. "
                                android:textColor="#03045E"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/layout_text_place"
                                android:layout_margin="10dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/editTextTextPersonName7"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:elevation="10dp"
                                    android:ems="10"
                                    android:hint="Add a Comment"
                                    android:inputType="textPersonName"
                                    android:textColor="#000000"
                                    android:textColorHint="#232323"
                                    android:layout_marginStart="10dp"/>

                                <ImageButton
                                    android:id="@+id/imageButton4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="-40dp"
                                    android:layout_marginEnd="10dp"
                                    android:backgroundTint="@color/white"
                                    app:srcCompat="@drawable/ic_baseline_navigate_next_24" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>