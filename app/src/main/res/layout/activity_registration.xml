<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_background"
    tools:context=".Registration">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <Button
                    android:id="@+id/btnBackRegister"
                    android:layout_width="71dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/editbox"
                    android:backgroundTint="@color/gray"
                    android:text="Back"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/RegistrationForm"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginBottom="-5dp"
                    android:fontFamily="sans-serif-black"
                    android:shadowColor="#1F2A67"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="Registration Form"
                    android:textAlignment="center"
                    android:textColor="#FFFEFE"
                    android:textSize="43dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/white_background4corners"
                android:orientation="vertical"
                android:paddingStart="2dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Register Now!"
                    android:textAlignment="center"
                    android:textColor="#03045E"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="2dp"
                    android:text="Name"
                    android:textColor="#03045E"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/Fname"
                    android:layout_width="375dp"
                    android:layout_height="33dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/editbox"
                    android:backgroundTint="#FFFFFF"
                    android:ems="10"
                    android:hint="First Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/Mname"
                    android:layout_width="375dp"
                    android:layout_height="33dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/editbox"
                    android:backgroundTint="#FFFFFF"
                    android:ems="10"
                    android:hint="Middle Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/Lname"
                    android:layout_width="375dp"
                    android:layout_height="33dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/editbox"
                    android:backgroundTint="#FFFFFF"
                    android:ems="10"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/accSettingsFname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="2dp"
                    android:text="Address"
                    android:textColor="#03045E"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="375dp"
                    android:layout_height="33dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/editbox"
                    android:backgroundTint="#FFFFFF"
                    android:ems="10"
                    android:hint="Type your address"
                    android:inputType="textPostalAddress"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="2dp"
                    android:text="E-mail Address"
                    android:textColor="#03045E"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/emailadd"
                    android:layout_width="375dp"
                    android:layout_height="33dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/editbox"
                    android:backgroundTint="#FFFFFF"
                    android:ems="10"
                    android:hint="Type your e-mail address"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="2dp"
                    android:text="Phone Number"
                    android:textColor="#03045E"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/phonenum"
                    android:layout_width="375dp"
                    android:layout_height="33dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/editbox"
                    android:backgroundTint="#FFFFFF"
                    android:ems="10"
                    android:hint="XXXX-XXXX-XXX"
                    android:inputType="phone"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="2dp"
                        android:text="Date of Birth"
                        android:textColor="#03045E"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/genderText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="160dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="2dp"
                        android:text="Gender"
                        android:textColor="#03045E"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/dateofbirth"
                        android:layout_width="239dp"
                        android:layout_height="33dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/editbox"
                        android:backgroundTint="#FFFFFF"
                        android:ems="10"
                        android:focusable="false"
                        android:hint="Select your date of birth (dd/mm/yyyy)"
                        android:inputType="date"
                        android:paddingLeft="18dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="12sp" />

                    <RadioGroup
                        android:id="@+id/registerGender"
                        android:layout_width="134dp"
                        android:layout_height="44dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/Male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:textColor="#03045E"
                            android:textSize="12dp" />

                        <RadioButton
                            android:id="@+id/female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female"
                            android:textColor="#03045E"
                            android:textSize="12dp" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="2dp"
                        android:text="Password"
                        android:textColor="#03045E"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="125dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="2dp"
                        android:text="Confirm Password"
                        android:textColor="#03045E"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="175dp"
                        android:layout_height="33dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/editbox"
                        android:backgroundTint="#FFFFFF"
                        android:ems="10"
                        android:hint="Type your password"
                        android:inputType="textPassword"
                        android:paddingLeft="18dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/cpassword"
                        android:layout_width="175dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/editbox"
                        android:backgroundTint="#FFFFFF"
                        android:ems="10"
                        android:hint="Type your password"
                        android:inputType="textPassword"
                        android:paddingLeft="18dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

            </LinearLayout>

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="96dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"

                android:layout_marginBottom="76dp"
                android:background="@drawable/editbox"
                android:text="Sign-Up"
                android:textSize="12sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>