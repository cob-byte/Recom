                                app:srcCompat="@drawable/ic_baseline_navigate_next_24" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/LowerSecondPoll2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/square_poll">

                            <TextView
                                android:id="@+id/LowerPollName2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="8dp"
                                android:text="2.  Anonymous"
                                android:textColor="#03045E"
                                android:textSize="10sp"/>

                            <TextView
                                android:id="@+id/LowerDescription2"
                                android:layout_width="270dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="5dp"
                                android:text="Writing effectively is an art. Start by using simple, everyday words people can easily understand. "
                                android:textColor="#03045E"
                                android:textSize="10sp"/>

                            <ImageButton
                                android:id="@+id/LowerbtnPoll2"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="320dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="15dp"
                                app:srcCompat="@drawable/ic_baseline_navigate_next_24" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/LowerSecondPoll3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/square_poll">

                            <TextView
                                android:id="@+id/LowerPollName3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="8dp"
                                android:text="2.  Anonymous"
                                android:textColor="#03045E"
                                android:textSize="10sp"/>

                            <TextView
                                android:id="@+id/LowerDescription3"
                                android:layout_width="270dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="5dp"
                                android:text="Writing effectively is an art. Start by using simple, everyday words people can easily understand. "
                                android:textColor="#03045E"
                                android:textSize="10sp"/>

                            <ImageButton
                                android:id="@+id/LowerbtnPoll3"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="320dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="15dp"
                                app:srcCompat="@drawable/ic_baseline_navigate_next_24" />
                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>